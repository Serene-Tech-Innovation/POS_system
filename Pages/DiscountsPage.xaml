<Page x:Class="POS.DiscountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Discounts and Promotions">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <ComboBox x:Name="DiscountTypeCombo" Width="150" Margin="5"
                      ItemsSource="{Binding DiscountTypes}"/>
            <Button Content="Add Discount" Margin="5" Click="AddDiscount_Click"/>
        </StackPanel>

        <DataGrid x:Name="DiscountsGrid" Grid.Row="1" Margin="5" 
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>