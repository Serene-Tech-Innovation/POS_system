<Page x:Class="POS.InventoryManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:POS"
      Title="Inventory Management">
    <Grid>
        <local:Header x:Name="Header" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Top" 
                      Grid.Row="0"/>
        <local:ProductFilterControl x:Name="ProductFilter" 
                            HorizontalAlignment="Stretch" 
                            Grid.Row="1"/>
        <local:ProductDisplayControl x:Name="ProductDisplay" 
                            HorizontalAlignment="Stretch" 
                            Grid.Row="2"/>
        <local:InventoryEditorControl x:Name="InventoryEditor"
                                    HorizontalAlignment="Stretch" 
                                    Grid.Row="3"/>
    </Grid>
</Page>