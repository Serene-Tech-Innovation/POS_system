<Page x:Class="POS.InventoryManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:POS"
      Title="Inventory Management">

    <Grid Background="White">
        <!-- Define layout structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filter -->
            <RowDefinition Height="*"/>
            <!-- Product Display -->
            <RowDefinition Height="Auto"/>
            <!-- Inventory Editor -->
        </Grid.RowDefinitions>


        <!-- Filter section -->
        <local:ProductFilterControl x:Name="ProductFilter"
                                    Grid.Row="1"
                                    Margin="10"
                                    HorizontalAlignment="Stretch"/>
        <Button x:Name="AddProductButton"
                Grid.Row="3"
                Content="Add New Product"
                Margin="0,0,786,10"
                
                Click="AddProductButton_Click" Height="33" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="98"/>

        <!-- Main product list -->
        <local:ProductDisplayControl x:Name="ProductDisplay"
                                     Grid.Row="2"
                                     Margin="10"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"/>

        <!-- Inventory editing control at bottom -->
        <local:InventoryEditorControl x:Name="InventoryEditor"
                                      Grid.Row="3"
                                      Margin="10,0,10,0"
                                      VerticalAlignment="Center" Loaded="InventoryEditor_Loaded_2"/>
    </Grid>
</Page>
