<Page x:Class="POS.ReceiptPreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Receipt Preview">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Receipt Preview" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>

        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="20" 
                Background="White" Padding="20">
            <StackPanel x:Name="ReceiptContent">
                <TextBlock Text="MY STORE" FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="123 Main St" HorizontalAlignment="Center"/>
                <TextBlock Text="Tel: 555-1234" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Order #: 1001" Margin="0,10,0,0"/>
                <TextBlock Text="Date: 2023-05-15 14:30" Margin="0,0,0,10"/>

                <ItemsControl x:Name="ReceiptItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Name}" Width="200"/>
                                <TextBlock Text="{Binding Quantity}" Width="50" TextAlignment="Right"/>
                                <TextBlock Text="{Binding Price}" Width="70" TextAlignment="Right"/>
                                <TextBlock Text="{Binding Total}" Width="70" TextAlignment="Right"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Line X1="0" X2="400" Stroke="Black" StrokeThickness="1" Margin="0,10"/>

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Subtotal:" Width="270"/>
                        <TextBlock x:Name="subTotalValue" Text="$0.00" Width="120" TextAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Tax:" Width="270"/>
                        <TextBlock x:Name="taxValue" Text="$0.00" Width="120" TextAlignment="Right"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Total:" Width="270" FontWeight="Bold"/>
                        <TextBlock x:Name="totalValue" Text="$0.00" Width="120" TextAlignment="Right" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Text="Thank you for your business!" Margin="0,20,0,0" 
                           HorizontalAlignment="Center" FontStyle="Italic"/>
            </StackPanel>
        </Border>

    </Grid>
</Page>