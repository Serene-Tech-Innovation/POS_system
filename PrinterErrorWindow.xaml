<Window x:Class="POS.PrinterErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Printer Error" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <TextBlock Text="No physical printer detected." FontSize="16" TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBlock Text="Do you want to continue and print to a PDF printer?" 
                   FontSize="14" Margin="0,40,0,0" TextWrapping="Wrap"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,100,0,0"  Width="264">
            <Button x:Name="OkButton" Content="No"  Margin="0,0,40,0" Height="40px" Width="80px" Click="OkButton_Click"/>
            <Button x:Name="PrintPdfButton" Content="Print to PDF" Width="120" Height="40px" Click="PrintPdfButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
