<UserControl x:Class="POS.ProductFilterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l="clr-namespace:POS"
             xmlns:lo="clr-namespace:POS.Helpers.UIUtilities">

    <StackPanel Orientation="Horizontal" Margin="0,0,10,10">
        <TextBox x:Name="txtSearch" Width="100" Margin="0,0,10,0" 
                 lo:TextBoxHelper.Placeholder="Search" VerticalAlignment="Center" TextChanged="txtSearch_TextChanged"/>

        <!-- Price Filter Section -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
            <TextBlock Text="Min Price:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <StackPanel Orientation="Horizontal">
                <RepeatButton x:Name="numMinPriceUp" Content="▲" Width="20" Click="numMinPriceUp_Click"/>
                <TextBox x:Name="numMinPrice" Width="60" Text="0" TextAlignment="Center" Margin="2,0" TextChanged="numMinPrice_TextChanged"/>
                <RepeatButton x:Name="numMinPriceDown" Content="▼" Width="20" Click="numMinPriceDown_Click"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
            <TextBlock Text="Max Price:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <StackPanel Orientation="Horizontal">
                <RepeatButton x:Name="numMaxPriceUp" Content="▲" Width="20" Click="numMaxPriceUp_Click"/>
                <TextBox x:Name="numMaxPrice" Width="60" Text="10000" TextAlignment="Center" 
                         Margin="2,0" TextChanged="numMaxPrice_TextChanged"/>
                <RepeatButton x:Name="numMaxPriceDown" Content="▼" Width="20" Click="numMaxPriceDown_Click"/>
            </StackPanel>
        </StackPanel>

        <ComboBox x:Name="cmbCategory" Width="120" Margin="0,0,10,0" SelectionChanged="cmbCategory_SelectionChanged"/>

        <ComboBox x:Name="cmbSubcategory" Width="120" Margin="0,0,10,0" SelectionChanged="cmbSubcategory_SelectionChanged"/>

        <ComboBox x:Name="cmbSort" Width="120" SelectedIndex="0"
          ItemsSource="{Binding SortOptions}" SelectionChanged="cmbSort_SelectionChanged" />


        <Button x:Name="btnReset" Content="Reset" Width="70" Click="btnReset_Click"/>
    </StackPanel>
</UserControl>