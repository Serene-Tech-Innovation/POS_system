<UserControl x:Class="POS.PaymentProcessingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <TextBlock Text="Payment Method" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="PaymentMethodCombo" Margin="0,0,0,10">
            <ComboBoxItem Content="Cash"/>
            <ComboBoxItem Content="Credit Card"/>
            <ComboBoxItem Content="Debit Card"/>
            <ComboBoxItem Content="Mobile Payment"/>
        </ComboBox>

        <StackPanel x:Name="CashPanel">
            <TextBlock Text="Amount Tendered" Margin="0,0,0,5"/>
            <TextBox x:Name="AmountTenderedBox" Margin="0,0,0,10"/>
            <TextBlock x:Name="ChangeDueText" FontWeight="Bold"/>
        </StackPanel>

        <Button Content="Process Payment" Margin="0,20,0,0" 
                Click="ProcessPayment_Click" Height="30"/>
    </StackPanel>
</UserControl>