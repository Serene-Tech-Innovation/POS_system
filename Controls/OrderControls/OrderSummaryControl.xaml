<UserControl x:Class="POS.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="#DDD" BorderThickness="1" Padding="10">
        <StackPanel>
            <TextBlock Text="Order Summary" FontSize="16" FontWeight="Bold"/>

            <ListView x:Name="ItemsList" Height="200" Margin="0,10,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Item" DisplayMemberBinding="{Binding Name}" Width="120"/>
                        <GridViewColumn Header="Qty" DisplayMemberBinding="{Binding Quantity}" Width="50"/>
                        <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Price}" Width="60"/>
                        <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="60"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Subtotal:" Width="100" FontWeight="Bold"/>
                    <TextBlock x:Name="SubtotalText" Text="$0.00"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tax:" Width="100" FontWeight="Bold"/>
                    <TextBlock x:Name="TaxText" Text="$0.00"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total:" Width="100" FontWeight="Bold"/>
                    <TextBlock x:Name="TotalText" Text="$0.00" FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>