<Window x:Class="POS.QuickProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product" Width="300" SizeToContent="Height"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Product Name" Margin="0,0,0,5"/>
        <TextBox x:Name="NameBox" Margin="0,0,0,10"/>

        <TextBlock Text="Price" Margin="0,0,0,5"/>
        <TextBox x:Name="PriceBox" Margin="0,0,0,10"/>
        
        <TextBlock Text="Category" Margin="0,0,0,5"/>
        <ComboBox x:Name="CategoryBox" IsEditable="True" Margin="0,0,0,10"/>

        <TextBlock Text="Sub Category" Margin="0,0,0,5"/>
        <ComboBox x:Name="SubCategoryBox" IsEditable="True" Margin="0,0,0,10"/>

        <TextBlock Text="Stock Quantity" Margin="0,0,0,5"/>
        <TextBox x:Name="StockBox" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="75" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>