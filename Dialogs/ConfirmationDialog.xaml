<Window x:Class="POS.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <StackPanel Margin="15">
        <TextBlock x:Name="MessageText" TextWrapping="Wrap" Margin="0,0,0,15"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Yes" Width="75" Margin="0,0,10,0" Click="YesButton_Click"/>
            <Button Content="No" Width="75" Click="NoButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>