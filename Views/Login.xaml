<Page x:Class="POS.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lo="clr-namespace:POS.Helpers.UIUtilities"
      xmlns:uiutils="clr-namespace:POS.Helpers.UIUtilities"
      Title="Login">

    <Grid Background="#FFE5E5E5">
        <Border Background="White" CornerRadius="10" Padding="20"
            Width="350" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>

                <TextBlock Text="POS Login"
                   FontSize="24" FontWeight="Bold"
                   Margin="0 0 0 20"
                   HorizontalAlignment="Center"/>

                <!-- Username -->
                <TextBox lo:TextBoxHelper.Placeholder="Username"
                 Margin="0 0 0 10" Height="40"
                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Password -->
                <PasswordBox Margin="0 0 0 20" Height="40"
                     lo:PasswordBoxHelper.Placeholder="Password"
                     uiutils:PasswordBoxAssistant.BindPassword="True"
                     uiutils:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay}"/>

                <!-- Login Button -->
                <Button Content="Login"
                Height="40"
                Background="#FF0078D7"
                Foreground="White"
                Command="{Binding LoginCommand}"/>

                <!-- Error Message -->
                <TextBlock Foreground="Red"
                   Margin="0 10 0 0"
                   TextWrapping="Wrap"
                   Text="{Binding ErrorMessage}"
                   Visibility="{Binding ErrorVisibility}"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
