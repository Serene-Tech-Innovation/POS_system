<Page x:Class="POS.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:POS"
      xmlns:lo="clr-namespace:POS.Helpers.UIUtilities"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="#FFE5E5E5">
        <Border Background="White" CornerRadius="10" Padding="20"
                Width="350" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="POS Login" FontSize="24" FontWeight="Bold" 
                           Margin="0 0 0 20" HorizontalAlignment="Center"/>

                <TextBox x:Name="UsernameBox" lo:TextBoxHelper.Placeholder="Username" 
                         Margin="0 0 0 10" Height="40" Text="cashier_test"/>

                <PasswordBox x:Name="PasswordBox" lo:PasswordBoxHelper.Placeholder="Password" 
                             Margin="0 0 0 20" Height="40" Password="hashed_password"/>

                <Button x:Name="loginButton" Content="Login"
                        Height="40" Background="#FF0078D7" Foreground="White"/>

                <TextBlock x:Name="ErrorMessage" Foreground="Red" Margin="0 10 0 0"
                           TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
