<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:l="clr-namespace:POS"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="POS.NewOrder"
        Title="New Order" Height="900" Width="1400" Closed="Window_Closed">
    <DockPanel LastChildFill="True">

        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Order">
                <MenuItem Header="New Order" Click="NewOrder_Click"/>
                <MenuItem Header="View Order" Click="ViewOrder_Click"/>
            </MenuItem>
            <MenuItem Header="_products">
                <MenuItem Header="Add _products"/>
                <MenuItem Header="Remove _products"/>
            </MenuItem>
            <MenuItem Header="Logout" Click="Logout_Click"/>
        </Menu>

        <!-- Main Content Grid -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="919*" />
                <ColumnDefinition Width="461*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Filters and Search -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,1,10">
                <TextBox x:Name="txtSearch" Width="100" Margin="0,0,10,0" TextChanged="txtSearch_TextChanged" l:TextBoxHelper.Placeholder="Search"/>
                <!-- Price Filter Section -->
                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="Min Price:" VerticalAlignment="Center"/>
                    <xctk:IntegerUpDown x:Name="numMinPrice" Width="100" Margin="5" VerticalAlignment="Center"
                        Minimum="0" Maximum="10000" ValueChanged="numMinPrice_ValueChanged" Value="0"/>
                    <TextBlock Text="Max Price:" VerticalAlignment="Center"/>
                    <xctk:IntegerUpDown x:Name="numMaxPrice" Width="100" Margin="5" VerticalAlignment="Center"
                        Minimum="0" Maximum="10000" ValueChanged="numMaxPrice_ValueChanged" Value="10000"/>
                </StackPanel>
                <Grid>
                    <ComboBox x:Name="cmbCategory" Width="120" Margin="0,0,10,0" SelectionChanged="cmbCategory_SelectionChanged"/>
                    <TextBlock x:Name="cmbCategoryTextBlock"
                       Text=" Your choice.."
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
                </Grid>
                <Grid>
                    <ComboBox x:Name="cmbSubcategory" Width="120" Margin="0,0,10,0" SelectionChanged="cmbSubcategory_SelectionChanged"/>
                    <TextBlock x:Name="cmbSubcategoryTextBlock"
                       Text=" Your choice.."
                       IsHitTestVisible="False"
                       Visibility="Visible"/>
                </Grid>
                <Grid>
                    <ComboBox x:Name="cmbSort" Width="120" SelectionChanged="cmbSort_SelectionChanged" SelectedIndex="0">
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Price Low to High"/>
                        <ComboBoxItem Content="Price High to Low"/>
                        <ComboBoxItem Content="A-Z"/>
                        <ComboBoxItem Content="Z-A"/>
                    </ComboBox>
                </Grid>
                <Button x:Name="btnFilter" Content="Filter" Width="75"/>



            </StackPanel>

            <!-- Items Display -->
            <ScrollViewer Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
                <StackPanel x:Name="flowPanelItems" Orientation="Vertical" />
            </ScrollViewer>

            <!-- Cart Section -->
            <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                <TextBox Text="Cart Items" FontSize="18" TextAlignment="Center" Margin="0,0,0,10" IsReadOnly="True"/>
                <ListView x:Name="cartListView" Height="600" Margin="0,0,0,10" av:ItemsSource="{av:SampleData ItemCount=5}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" Width="90" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Price/Unit" Width="65" DisplayMemberBinding="{Binding Price}" />
                            <GridViewColumn Header="Total" Width="40" DisplayMemberBinding="{Binding TotalPrice}" />
                            <GridViewColumn Header="Quantity" Width="65">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Width="50"
                                      SelectedValue="{Binding Quantity, Mode=TwoWay}" SelectionChanged="ComboBox_SelectionChanged">
                                            <ComboBox.ItemsSource>
                                                <x:Array 
                                             xmlns:sys="clr-namespace:System;assembly=mscorlib" Type="{x:Type sys:Int32}">
                                                    <sys:Int32>1</sys:Int32>
                                                    <sys:Int32>2</sys:Int32>
                                                    <sys:Int32>3</sys:Int32>
                                                    <sys:Int32>4</sys:Int32>
                                                    <sys:Int32>5</sys:Int32>
                                                    <sys:Int32>6</sys:Int32>
                                                    <sys:Int32>7</sys:Int32>
                                                    <sys:Int32>8</sys:Int32>
                                                    <sys:Int32>9</sys:Int32>
                                                    <sys:Int32>10</sys:Int32>
                                                </x:Array>
                                            </ComboBox.ItemsSource>
                                        </ComboBox>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Action" Width="55">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="❌" Background="Red" Click="RemoveButton_Click"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>

                    </ListView.View>
                </ListView>
                <Label x:Name="lblTotal" Content="Total: Rs.0" FontSize="16" Margin="0,0,0,10"/>
                <Button x:Name="btnRemoveItem" Content="Remove" Background="Red" Click="btnRemoveItem_Click" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnCheckout" Content="Checkout" Background="LawnGreen" Width="100" Click="btnCheckout_Click" Margin="0,0,10,0"/>
                    <Button x:Name="clear" Content="Clear" Background="Red" Width="100" Click="clear_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
