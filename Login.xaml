<Window x:Class="POS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="525" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="48*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="usernameTextBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="191,102,0,0" DataContext="Username" Grid.ColumnSpan="2"/>
        <PasswordBox Name="passwordBox" Width="200" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="191,141,0,0" DataContext="Password" Grid.ColumnSpan="2"/>
        <Button Name="loginButton" Width="100" Height="30" Content="Login" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="158,184,0,0" Click="LoginButton_Click" RenderTransformOrigin="0.383,-1.294"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="122,102,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.442,-0.232"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="122,141,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.442,-0.232"/>
        <Button x:Name="registerButton" Width="100" Height="30" Content="Register" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="262,184,0,0" Click="RegisterButton_Click" RenderTransformOrigin="0.383,-1.294"/>
    </Grid>
</Window>
